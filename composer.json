{
	"name": "redaxmedia/phpunit-provider-autoloader",
	"description": "Magic helper to autoload CSV, JSON, XML and YAML data provider in PHPUnit",
	"version": "2.1.0",
	"license": "GPL-3.0-only",
	"require":
	{
		"kzykhys/php-csv-parser": "^1.4",
		"php": "^7.1",
		"phpunit/phpunit": "^7",
		"symfony/yaml": "^4"
	},
	"require-dev":
	{
		"redaxmedia/php-coding-standard": "1.2.2",
		"squizlabs/php_codesniffer": "3.3.2"
	},
	"autoload":
	{
		"psr-0":
		{
			"PHPUnitProviderAutoloader": "src"
		}
	},
	"scripts":
	{
		"lint":
		[
			"vendor/bin/phpcs src tests"
		],
		"test":
		[
			"vendor/bin/phpunit"
		],
		"fix":
		[
			"vendor/bin/phpcbf src tests"
		]
	}
}
